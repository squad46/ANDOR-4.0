@{
    ViewData["title"] = "Recuperar senha";
    var mensagem = ViewData["mensagem"];
}
<div  class="container-fluid pt-0 mb-5 pb-5 modal-dialog-scrollable bg-light justify-content-center">
    <div  class="container ">
        <div class="row justify-content-center mt-5">
            <div class="col-md-5">
                <div class="border bg-white p-5 arredondar shadow">
                    <form asp-controller="Login" asp-action="PreparaRedefinicao" method="post" class="mt-3 needs-validation" novalidate> <!-- recuperação de senha -->
                        <h4 class="border-bottom">Esqueceu a senha?</h4>
                        <p>
                            Informe seu e-mail cadastrado pra que possamos enviar o código de redefinição de senha. 
                        </p>
                        <div class="">
                            <div class="">
                                <label class="control-label">Email</label>
                                <input class="form-control" name="destinatario" type="email" aria-required="true" required autofocus />
                                <div class="invalid-feedback" role="alert">Preencha com um e-mail cadastrado.</div>
                            </div>
                        </div>
                        <div class="text-right">
                            @{
                                if (mensagem != null)
                                {
                                    <span>@mensagem</span>
                                }
                            }
                            <button class="btnn mt-3" >Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
 
<script>
    // desativa comportamento padrão do html5 se houver campos inválidos.
    (function() {
      'use strict';
      window.addEventListener('load', function() {
        // Pega todos os formulários que nós queremos aplicar estilos de validação Bootstrap personalizados.
        var forms = document.getElementsByClassName('needs-validation');
        // Faz um loop neles e evita o envio caso não esteja validado
        var validation = Array.prototype.filter.call(forms, function(form) {
          form.addEventListener('submit', function(event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();
</script>