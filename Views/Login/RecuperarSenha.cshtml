@{
    ViewData["title"] = "Recuperar senha";
    var mensagem = ViewData["mensagem"];
}
<div  class="container-fluid pt-0 mb-5 pb-5 modal-dialog-scrollable bg-light justify-content-center">
    <div  class="container ">
        <div class="row justify-content-center mt-5">
            <div class="col-md-5">
                <div class="border bg-white p-5 arredondar shadow">
                    <form asp-action="RecuperarSenha" method="post" class="mt-3"><!-- recuperação de senha -->
                        <h4 class="border-bottom">Esquceu a senha?</h4>
                        <p>
                            Informe seu e-mail cadastrado pra que possamos enviar o código de redefinição de senha. 
                        </p>
                        <div class="">
                            <div class="">
                                <label class="control-label">Email</label>
                                <input class="form-control" name="senha" type="email" />
                            </div>
                        </div>
                        <div class="text-right">
                            @{
                                if (mensagem != null)
                                {
                                    <span>@mensagem</span>
                                }
                            }
                            <button class="btnn mt-3" >Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
 
