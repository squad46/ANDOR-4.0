                <script>const id = Cookies.get('Id');
                    const user = Cookies.get('Usuario');
                    if (typeof id !== 'undefined') {
                        $('#on').show();
                        $('#off').hide();
                        var nome = user.split(' ').shift();
                        $('#usuario').text(nome);
                        var link = "/Pessoa/Details/" + id;
                        $('#usuario').attr('href', link);
                    }
                    else {
                        $('#on').hide();
                        $('#off').show();
                    }

                    $("#feed-trabalhos").click(function () {
                        $("#trabalhos").show();
                        $("#moradias").hide();
                        $("#informacoes").hide();
                        $("#ongs").hide();
                    });
                    $("#feed-moradias").click(function () {
                        $("#trabalhos").hide();
                        $("#moradias").show();
                        $("#informacoes").hide();
                        $("#ongs").hide();
                    });
                    // https://github.com/js-cookie/js-cookie</script>
