@model Andor.Models.Moradia
@{
    ViewData["Title"] = "Adicionar";
    var id_pessoa = ViewData["Id_pessoa"];
    var mensagem = TempData["mensagem"];
}
<div class="container-fluid pt-0 bg-light">
    <div class="container text-black-50 py-3">
        <div class="row justify-content-center">
            <div class="col-11 bg-cards-1">
                @if (mensagem != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong>@mensagem</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                <h4 class="text-right">Oferta de moradia</h4>
                <hr />
                <form asp-action="Novo" enctype="multipart/form-data" id="formMoradia" class="needs-validation" novalidate>
                    <div class="form-group" style="display:none">
                        <input type="text" value="@ViewData["Id_pessoa"]" asp-for="Id_pessoa" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Título da oferta *</label>
                        <input asp-for="Name" type="text" class="form-control" aria-required="true" required minlength="5" maxlength="40" autofocus />
                        <div class="invalid-feedback" role="alert"> A oferta deve ter um título mínimo 5 e máximo 40 caracteres. </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Descrição *</label>
                        <textarea asp-for="Descricao" type="text" class="form-control" aria-required="true" required minlength="10" maxlength="200"></textarea>
                        <div class="invalid-feedback" role="alert">A oferta deve ter uma descrição de no mínimo 10 e máximo 200 caracteres. </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6 px-3">
                            <label class="control-label">Tipo *</label>
                            <select class="custom-select form-control" asp-for="Tipo" pattern="[a-zA-Z]" aria-required="true" required >
                                <option selected disabled value="">-</option>
                                <option>Apartamento</option>
                                <option>Casa</option>
                                <option>Quarto</option>
                            </select>
                            <div class="invalid-feedback" role="alert"> Escolha uma das opções.  </div>

                        </div>
                        <div class="form-group col-6 px-3">
                            <label class="control-label">Preço *</label>
                            <input asp-for="Preco" type="text" class="form-control" pattern="([0-9]{1,3}\.)?[0-9]{1,3},[0-9]{2}$" aria-required="true" required />
                            <div class="invalid-feedback" role="alert">  Informe o valor do imóvel. Ex: 9.999,99 </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-8 px-3">
                            <label class="control-label">Endereço *</label>
                            <input asp-for="Endereco" type="text" class="form-control" aria-required="true" required maxlength="60" />
                            <div class="invalid-feedback" role="alert"> Informe o endereço do imóvel em no máximo 60 caracteres. </div>
                        </div>
                        <div class="form-group col-4 px-3">
                            <label class="control-label">Bairro *</label>
                            <input asp-for="Bairro" type="text" class="form-control" aria-required="true" required minlength="1" maxlength="20"/>
                            <div class="invalid-feedback" role="alert"> Informe o bairro do imóvel em no máximo 20 caracteres. </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-4 px-3">
                            <label class="control-label">Número *</label>
                            <input asp-for="Numero" type="text" class="form-control" pattern="[0-9]+$" maxlength="5" aria-required="true" required />
                            <div class="invalid-feedback" role="alert"> Informe o número do local. </div>
                        </div>
                        <div class="form-group col-4 px-3">
                            <label asp-for="CEP" class="control-label">CEP *</label>
                            <input asp-for="CEP" type="text" class="form-control" pattern="[0-9]+$" minLength="8" maxlength="8" aria-required="true" required />
                            <div class="invalid-feedback" role="alert">Informe o CEP apenas com números. </div>
                        </div>
                        <div class="form-group col-4 px-3">
                            <label asp-for="UF" class="control-label">UF *</label>
                            <select asp-for="UF" class="custom-select form-control" aria-required="true" required>
                                <option selected disabled value="">-</option>
                                <option>AC</option>
                                <option>AL</option>
                                <option>AP</option>
                                <option>AM</option>
                                <option>BA</option>
                                <option>CE</option>
                                <option>DF</option>
                                <option>ES</option>
                                <option>GO</option>
                                <option>MA</option>
                                <option>MS</option>
                                <option>MT</option>
                                <option>MG</option>
                                <option>PA</option>
                                <option>PB</option>
                                <option>PR</option>
                                <option>PE</option>
                                <option>PI</option>
                                <option>RJ</option>
                                <option>RN</option>
                                <option>RS</option>
                                <option>RO</option>
                                <option>RR</option>
                                <option>SC</option>
                                <option>SP</option>
                                <option>SE</option>
                                <option>TO</option>
                            </select>
                            <div class="invalid-feedback" role="alert"> Escolha uma das opções. </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cidade" class="control-label">Cidade *</label>
                        <input asp-for="Cidade" type="text" class="form-control" aria-required="true" required maxlength="20" />
                        <div class="invalid-feedback" role="alert">Informe o nome da Cidade do imóvel em no máximo 20 caracteres. </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nome do locador *</label>
                        <input asp-for="NomeContato" type="text" class="form-control" aria-required="true" required minlength="3" maxlength="40" />
                        <div class="invalid-feedback" role="alert"> Informe o nome do locador em até 40 caracteres. </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6 px-3">
                            <label class="control-label">Telefone do locador *</label>
                            <input asp-for="TelefoneContato" type="tel" class="form-control" aria-required="true" required pattern="[0-9]+$" minlength="10" maxlength="13" />
                            <div class="invalid-feedback" role="alert">Informe um telefone para contato apenas com números. </div>
                        </div>
                        <div class="form-group col-6 px-3">
                            <label class="control-label">Email do locador *</label>
                            <input asp-for="EmailContato" class="form-control" type="email" aria-required="true" required maxlength="40"/>
                            <div class="invalid-feedback" role="alert">Informe um e-mail para contato. </div>
                        </div>
                    </div>
                    <div class="form-group" style="display:none">
                        <label asp-for="DataCadastro" class="control-label"></label>
                        <input type="datetime" value="@DateTime.Now" asp-for="DataCadastro" class="form-control" />
                    </div>
                    <div class="row">
                        <div class="form-group col-6 px-3">
                            <label class="control-label">Capa / Imagem 1 *</label>
                            <input type="file" name="img1" accept=".jpg, .jpeg, .png" class="form-control" aria-required="true" required />
                            <div class="invalid-feedback" role="alert">Adicione ao menos uma imagem do imóvel. </div>
                        </div>
                        <div class="form-group col-6 px-3">
                            <label class="control-label">Imagem 2</label>
                            <input type="file" name="img2" accept=".jpg, .jpeg, .png" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6 px-3">
                            <label class="control-label">Imagem 3</label>
                            <input type="file" name="img3" accept=".jpg, .jpeg, .png" class="form-control" />
                        </div>
                        <div class="form-group col-6 px-3">
                            <label class="control-label">Imagem 4</label>
                            <input type="file" name="img4" accept=".jpg, .jpeg, .png" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group d-flex mt-4 justify-content-end">
                        <hr />
                        <input type="submit" value="Adicionar" class="btn m-1 btn-editar" />
                        <a asp-controller="Pessoa" asp-action="Details" asp-route-id="@id_pessoa" class="btn btn-editar m-1">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
</div>

<script>
    // Exemplo de JavaScript inicial para desativar envios de formulário, se houver campos inválidos.
    (function() {
      'use strict';
      window.addEventListener('load', function() {
        // Pega todos os formulários que nós queremos aplicar estilos de validação Bootstrap personalizados.
        var forms = document.getElementsByClassName('needs-validation');
        // Faz um loop neles e evita o envio
        var validation = Array.prototype.filter.call(forms, function(form) {
          form.addEventListener('submit', function(event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();
</script>