@model Andor.Models.Trabalho
@{
    ViewData["Title"] = "Adicionar";
    var id_pessoa = ViewData["Id_pessoa"];
    var mensagem = TempData["mensagem"];
}
<div class="container-fluid pt-0 bg-light">
    <div class="container text-black-50 p-3">

        <div class="row justify-content-center">
            <!--
            <div class="col-md-6">
                <img class="col-md-12" src=~/img/oportunidade-emprego.jpg/>
            </div>
            -->
            <div class="col-11 bg-cards-1">
                @if (mensagem != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong>@mensagem</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                <h4 class="text-right">Emprego / Trabalho</h4>
                <hr />
                <form asp-action="trabalhoCreate" id="formTrabalho" class="needs-validation" novalidate>
                    <div class="form-group" style="display:none">
                        <input type="text" value="@ViewData["Id_pessoa"]" asp-for="Id_pessoa" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="instituicaoTrabalho" class="control-label">Instituição / Empregador *</label>
                        <input asp-for="Instituicao" id="instituicaoTrabalho" class="form-control" type="text" aria-required="true" required maxlength="20" autofocus />
                        <div class="invalid-feedback" role="alert">Informe o nome da Instituição ou Empresa em no máximo 20 caracteres. </div>
                    </div>
                    <div class="form-group">
                        <label for="tituloTrabalho" class="control-label">Escreva um título para sua oferta de trabalho *</label>
                        <input asp-for="Nome" id="tituloTrabalho" class="form-control" aria-required="true" required minlength="5" maxlength="40" />
                        <div class="invalid-feedback" role="alert"> A oferta deve ter um título de máximo 40 caracteres. </div>
                    </div>
                    <div class="form-group">
                        <label for="descricaoTrabalho" class="control-label">Atividade / Descrição * </label>
                        <textarea asp-for="Atividade" id="descricaoTrabalho" class="form-control" aria-required="true" required minlength="10" maxlength="200"></textarea>
                        <div class="invalid-feedback" role="alert"> A oferta deve ter uma descrição de no máximo 200 caracteres.</div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="tipoTrabalho" class="control-label">Tipo de contratação *</label>
                                <select id="tipoTrabalho" class="custom-select form-control" asp-for="Tipo" aria-required="true" required>
                                    <option selected disabled value="">-</option>
                                    <option>Autônomo</option>
                                    <option>CLT</option>
                                    <option>PJ</option>
                                    <option>Temporário</option>
                                </select>
                                <div class="invalid-feedback" role="alert"> Escolha uma das opções. </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="salarioTrabalho" class="control-label">Salário *</label>
                                <input asp-for="Salario" id="salarioTrabalho" class="form-control" pattern="([0-9]{1,3}\.)?[0-9]{1,3},[0-9]{2}$" aria-required="true" required />
                                <div class="invalid-feedback" role="alert"> Informe a faixa salarial. Ex: 9.999,00 </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-8 px-3">
                            <label for="enderecoTrabalho" class="control-label">Endereço *</label>
                            <input asp-for="Endereco" id="enderecoTrabalho" class="form-control" aria-required="true" required minlength="3" maxlength="60" />
                            <div class="invalid-feedback" role="alert"> Informe o endereço da Instituição ou Empresa em no máximo 60 caracteres. </div>
                        </div>
                        <div class="form-group col-4 px-3">
                            <label for="bairroTrabalho" class="control-label">Bairro *</label>
                            <input asp-for="Bairro" id="bairroTrabalho" class="form-control" aria-required="true" required maxlength="20" />
                            <div class="invalid-feedback" role="alert"> Informe o bairro da Instituição ou Empresa em no máximo 20 caracteres. </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label for="numeroTrabalho" class="control-label">Número *</label>
                                <input asp-for="Numero" id="numeroTrabalho" class="form-control" type="text" pattern="[0-9]+$" maxlength="6" aria-required="true" required/>
                                <div class="invalid-feedback" role="alert"> Informe o número do local. </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="CEP" for="cepTrabalho" class="control-label">CEP *</label>
                                <input asp-for="CEP" id="cepTrabalho" class="form-control" type="text" pattern="[0-9]+$" minlength="8" maxlength="8" aria-required="true" required />
                                <div class="invalid-feedback" role="alert"> Informe o CEP apenas com números. </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="UF" for="ufTrabalho" class="control-label">UF *</label>
                                <select asp-for="UF" id="ufTrabalho" class="custom-select form-control" aria-required="true" required>
                                    <option selected disabled value="">-</option>
                                    <option>AC</option>
                                    <option>AL</option>
                                    <option>AP</option>
                                    <option>AM</option>
                                    <option>BA</option>
                                    <option>CE</option>
                                    <option>DF</option>
                                    <option>ES</option>
                                    <option>GO</option>
                                    <option>MA</option>
                                    <option>MS</option>
                                    <option>MT</option>
                                    <option>MG</option>
                                    <option>PA</option>
                                    <option>PB</option>
                                    <option>PR</option>
                                    <option>PE</option>
                                    <option>PI</option>
                                    <option>RJ</option>
                                    <option>RN</option>
                                    <option>RS</option>
                                    <option>RO</option>
                                    <option>RR</option>
                                    <option>SC</option>
                                    <option>SP</option>
                                    <option>SE</option>
                                    <option>TO</option>
                                </select>
                                <div class="invalid-feedback" role="alert"> Escolha uma das opções. </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cidade" for="cidadeTrabalho" class="control-label">Cidade *</label>
                        <input asp-for="Cidade" id="cidadeTrabalho" class="form-control" aria-required="true" required maxlength="20" />
                        <div class="invalid-feedback" role="alert"> Informe a cidade em no máximo 20 caracteres. </div>
                    </div>
                    <div class="form-group">
                        <label for="empregadorTrabalho" class="control-label">Nome do empregador *</label>
                        <input asp-for="NomeContato" id="empregadorTrabalho" class="form-control" aria-required="true" required minlength="3" maxlength="40" />
                        <div class="invalid-feedback" role="alert"> Informe o nome do empregador em até 40 caracteres. </div>
                    </div>
                    <div class="form-group">
                        <label for="telefoneTrabalho" class="control-label">Telefone de contato *</label>
                        <input type="tel" asp-for="TelefoneContato" id="telefoneTrabalho" class="form-control" aria-required="true" required minlength="10" maxlength="13" pattern="[0-9]+$" />
                        <div class="invalid-feedback" role="alert"> Informe um telefone para contato apenas com números. </div>
                    </div>
                    <div class="form-group">
                        <label for="emailTrabalho" class="control-label">Email de contato *</label>
                        <input asp-for="EmailContato" type="email" class="form-control" aria-required="true" required maxlength="40" />
                        <div class="invalid-feedback" role="alert"> Informe um e-mail para contato. </div>
                    </div>
                    <div class="form-group" style="display:none">
                        <label asp-for="DataCadastro" class="control-label"></label>
                        <input type="text" value="@DateTime.Now" asp-for="DataCadastro" class="form-control" />
                    </div>
                    <div class="form-group d-flex mt-4 justify-content-end">
                        <hr />
                        <input type="submit" value="Adicionar" class="btn m-1 btn-editar" />
                        <a asp-controller="Pessoa" asp-action="Details" asp-route-id="@id_pessoa" class="btn btn-editar m-1">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
</div>

<script>
    // desativa comportamento padrão do html5 se houver campos inválidos.
    (function() {
      'use strict';
      window.addEventListener('load', function() {
        // Pega todos os formulários que nós queremos aplicar estilos de validação Bootstrap personalizados.
        var forms = document.getElementsByClassName('needs-validation');
        // Faz um loop neles e evita o envio caso não esteja validado
        var validation = Array.prototype.filter.call(forms, function(form) {
          form.addEventListener('submit', function(event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();
</script>