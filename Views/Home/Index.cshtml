    ViewData["Title"] = "Refugiados";
    var _trabalhos = ViewData["_trabalhos"] as List<Trabalho>;
    var trabalhos = ViewData["trabalhos"] as List<Trabalho>;
    var moradias = ViewData["moradias"] as List<Moradia>;

}
